@model IEnumerable<NewFashion.ViewModels.FactoryEmployees>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "CreateEmployees", "Factories")
</p>

<table class="table table-responsive">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Location
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @ViewBag.Location
            </td>
            <td>
                @Html.ActionLink("Edit", "EditEmployees", new { id = item.WorkerID }) |
                @Html.ActionLink("Details", "DetailsEmployees", new { id = item.WorkerID }) |
                @Html.ActionLink("Delete", "DeleteEmployees", new { id = item.WorkerID })
            </td>
        </tr>
    }

</table>

